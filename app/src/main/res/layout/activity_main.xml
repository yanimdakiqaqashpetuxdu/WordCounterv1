<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter text here"
        android:inputType="textMultiLine"
        android:minHeight="100dp" />

    <Button
        android:id="@+id/countWordsButton"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:text="Count Words" />

    <Button
        android:id="@+id/countCharactersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count Characters" />

    <TextView
        android:id="@+id/wordCountResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word Count: 0" />

    <TextView
        android:id="@+id/characterCountResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Character Count: 0" />
</LinearLayout>
